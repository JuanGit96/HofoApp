<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="Registro de cocinero"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:theme="@style/CampoTextoBlanco" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="text"
                android:backgroundTint="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:theme="@style/CampoTextoBlanco"
                android:textColor="@android:color/white"/>



            <EditText
                android:id="@+id/user_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ciudad"
                android:inputType="text"
                android:backgroundTint="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:theme="@style/CampoTextoBlanco"
                android:textColor="@android:color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/user_birthdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Fecha nacimiento"
                    android:inputType="datetime"
                    android:backgroundTint="@android:color/background_light"
                    android:textColorHint="@android:color/background_light"
                    android:theme="@style/CampoTextoBlanco"
                    android:textColor="@android:color/white"
                    android:clickable="true"/>

                <Button
                    android:id="@+id/user_birthdate_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_date_range_black_24dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>


            <EditText
                android:id="@+id/user_age_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Años experiencia"
                android:inputType="number"
                android:backgroundTint="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:theme="@style/CampoTextoBlanco"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono celular"
                android:inputType="number"
                android:backgroundTint="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:theme="@style/CampoTextoBlanco"
                android:textColor="@android:color/white"/>




            <EditText
                android:id="@+id/user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direccion"
                android:inputType="text"
                android:backgroundTint="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:theme="@style/CampoTextoBlanco"
                android:textColor="@android:color/white"/>


            <EditText
                android:id="@+id/user_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion"
                android:inputType="text"
                android:backgroundTint="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:theme="@style/CampoTextoBlanco"
                android:textColor="@android:color/white"/>



            <EditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electronico"
                android:inputType="textEmailAddress"
                android:backgroundTint="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:theme="@style/CampoTextoBlanco"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:backgroundTint="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:theme="@style/CampoTextoBlanco"
                android:textColor="@android:color/white"/>


            <EditText
                android:id="@+id/user_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirma Contraseña"
                android:inputType="textPassword"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:theme="@style/CampoTextoBlanco"
                android:textColor="@android:color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/multimediaImagenPerfil"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >

                    <Button
                        android:id="@+id/addImagePerfil"
                        android:onClick="uploadImagePerfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Imagen Perfil"
                        android:textColor="@android:color/background_dark" />

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/viewPerfil"
                        android:layout_width="157dp"
                        android:layout_height="123dp"
                        android:src="@drawable/imagen_no_disponible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/multimediaImagen"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >

                    <Button
                        android:id="@+id/addImageHome"
                        android:onClick="uploadImageHogar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foto Hogar"
                        android:textColor="@android:color/background_dark" />

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/viewHogar"
                        android:layout_width="157dp"
                        android:layout_height="123dp"
                        android:src="@drawable/imagen_no_disponible" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/user_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Registrate!"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_goTo_loginPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes cuenta? \n     ¡Ingresa aquí!"
                android:layout_gravity="center"
                android:textColor="@android:color/background_light"/>








        </LinearLayout>

    </ScrollView>









</LinearLayout>